---
const { title, src, id } = Astro.props;
---

<dialog id=`my_modal_${id}` class="modal">
	<div class="modal-box max-w-4xl">
		<form method="dialog">
			<button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2"
				>✕</button
			>
		</form>
		<div class="flex flex-col items-center">
			<figure>
				<img src=`/titles/${src}.webp` alt={title} title={title}/>
			</figure>
			<a href=`/titles/${src}.pdf` download=`/titles/${src}.pdf`>
				<button
					class="font-bold mt-2 text-oleojake-secondary hover:underline hover:text-oleojake-primary"
					>Download ↓</button
				>
			</a>
		</div>
	</div>
</dialog>

<div
	onclick=`my_modal_${id}.showModal()`
	class="card border border-oleojake-primary cursor-pointer transition-all duration-300 hover:-translate-y-1"
>
	<figure>
		<img src=`/titles/${src}.webp` alt={title} title={title}/>
	</figure>
	<div class="border-t border-oleojake-primary rounded-b-md">
		<h2 class="text-xs py-2 mx-auto text-center text-oleojake-primary">
			{title}
		</h2>
	</div>
</div>
